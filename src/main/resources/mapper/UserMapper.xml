<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="并发编程15.分库分表.dao.UserMessageMapper">

    <select id="selectByUserId" parameterType="java.util.Map" resultType="并发编程15.分库分表.po.UserMessagePO">
        select * from t_user_message_${tableIndex} where user_id=#{userId}
    </select>


    <select id="selectNotReply" parameterType="java.util.Map" resultType="并发编程15.分库分表.po.UserMessagePO">
        select * from t_user_message_${tableIndex} where user_id in
        <foreach collection="userIdList" item="userId" open="(" separator="," close=")">
            #{userId}
        </foreach>
        and `status`=1 and reply=0
        and create_time>=DATE_SUB(now(), INTERVAL 1 day);
    </select>

</mapper>